<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>common.servlet.Login</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>RegisterServlet</servlet-name>
  	<servlet-class>common.servlet.Register</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>RegisterServlet</servlet-name>
  	<url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <filter>
  	<filter-name>VerificationServlet</filter-name>
  	<filter-class>common.filter.Verification</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>VerificationServlet</filter-name>
  	<url-pattern>/docs</url-pattern>
  	<url-pattern>/share</url-pattern>
  	<url-pattern>/versions</url-pattern>
  </filter-mapping>
  
  <servlet>
  	<servlet-name>ControlServlet</servlet-name>
  	<servlet-class>common.servlet.DocsControl</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ControlServlet</servlet-name>
  	<url-pattern>/docs</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ShareServlet</servlet-name>
  	<servlet-class>common.servlet.ShareControl</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ShareServlet</servlet-name>
  	<url-pattern>/share</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>VersionServlet</servlet-name>
  	<servlet-class>common.servlet.VersionControl</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>VersionServlet</servlet-name>
  	<url-pattern>/versions</url-pattern>
  </servlet-mapping>
  
</web-app>